@model AdmissionWebsiteFinal.Models.StandingViewModel

<form asp-action="Index">
    <div class="container">
        <div class="form-group">
            @Html.DropDownListFor(m => m.OptionId, new SelectList(Model.Options, "Id", "Specialization.Name"), "Select Specialization", new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.DropDownList("filterMethod",new List<SelectListItem>{
                                              new SelectListItem{ Text = "All",Value ="1" },
                                              new SelectListItem{ Text = "Confirmed",Value ="2"},},"Select Filter", new { @class = "form-control"})
        </div>
        <div class="form-group">
            <input type="submit" value="Get" class="btn btn-primary" />
        </div>
    </div>
</form>
<div class="float-right">
    <a asp-controller="Standings" asp-action="StandingsToPdf">Export to PDF.</a>
</div>
<h1>Buget</h1>
<table class="table text-nowrap table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Score
            </th>
            <th>
                CNP
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model.BugetEntries != null)
    {
        <tbody>
            @foreach (var item in Model.BugetEntries)
            {
                <tr class=@(item.ConfirmedOption?"table-success":"")>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContestantId)
                    </td>
                    <th class="font-weight-normal">
                        @Html.DisplayFor(modelItem => item.Contestant.FirstName)
                    </th>
                    <th class="font-weight-normal">
                        @Html.DisplayFor(modelItem => item.Contestant.LastName)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        <a asp-controller="Admission" asp-action="EntryDetails" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>

<h1>Taxa</h1>
<table class="table text-nowrap table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Score
            </th>
            <th>
                CNP
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model.TaxaEntries != null)
    {
        int i = 0;
        string tableColor = "";
<tbody>
    @foreach (var item in Model.TaxaEntries)
    {
        if (item.ConfirmedOption == true)
        {
            tableColor = "table-success";
        }
        if (i >= Model.Option.LocuriTaxa)
        {
            tableColor = "table-warning";
        }
        <tr class=@tableColor>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContestantId)
            </td>
            <th class="font-weight-normal">
                @Html.DisplayFor(modelItem => item.Contestant.FirstName)
            </th>
            <th class="font-weight-normal">
                @Html.DisplayFor(modelItem => item.Contestant.LastName)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-controller="Admission" asp-action="EntryDetails" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
        i++;
    }
</tbody>
    }
</table>

